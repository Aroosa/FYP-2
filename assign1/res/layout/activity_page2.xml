<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" 
    
    android:background="#E8E8E8">

    <EditText
        android:id="@+id/edittext_page1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_page2"
        android:ems="10"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="18dp"
        android:hint="Type title"
        android:textSize="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/title_page2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:text="Title"
        android:padding="2dp"
        android:textColor="#989898"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/img2"
        android:layout_alignBottom="@+id/img2"
        android:layout_alignRight="@+id/edittext_page1"
        android:onClick="makePopup3"
        android:text="Morning" />

    <Button
        android:id="@+id/img2"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/img1"
        android:layout_toLeftOf="@+id/img3"
        android:layout_toRightOf="@+id/img1"
        android:onClick="makePopup2"
        android:text="Tomorrow" />

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/edittext_page1"
        android:layout_below="@+id/edittext_page1"
        android:layout_marginTop="24dp"
        android:onClick="makePopup"
        android:src="@drawable/clock" />
    
</RelativeLayout>